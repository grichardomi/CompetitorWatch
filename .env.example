# =============================================================================
# CompetitorWatch Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# =============================================================================
# Application Configuration
# =============================================================================
NEXT_PUBLIC_APP_NAME=CompetitorWatch
# Production URL (change for your domain)
NEXT_PUBLIC_APP_URL=https://your-domain.com
# Development: NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=production

# =============================================================================
# Database Configuration (Railway PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# Authentication (NextAuth.js)
# =============================================================================
# Production: Must match your domain
NEXTAUTH_URL=https://your-domain.com
# Development: NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-min-32-chars-very-important

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# Stripe Payment Configuration
# =============================================================================
# Use sk_live_... and pk_live_... for production
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_test_...

# Stripe Price IDs (from your Stripe Dashboard)
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PROFESSIONAL=price_...
STRIPE_PRICE_ENTERPRISE=price_...

# =============================================================================
# Plan Configurations
# =============================================================================
PLAN_STARTER_LIMIT=5
PLAN_PROFESSIONAL_LIMIT=20
PLAN_ENTERPRISE_LIMIT=100

# =============================================================================
# Email Configuration (Resend)
# =============================================================================
EMAIL_FROM=noreply@your-domain.com
EMAIL_REPLY_TO=support@your-domain.com
RESEND_API_KEY=re_...

# =============================================================================
# SMS Configuration (Twilio - Optional)
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# AI/ML Configuration (Anthropic Claude)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# Cron Jobs & Scheduled Tasks
# =============================================================================
CRON_SECRET=your-secure-cron-secret-token

# =============================================================================
# Trial Configuration
# =============================================================================
TRIAL_DURATION_DAYS=14
TRIAL_GRACE_PERIOD_DAYS=3
TRIAL_COMPETITOR_LIMIT=3

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_SIGNUP=true
ENABLE_TRIALS=true
ENABLE_ANALYTICS=true
ENABLE_SMS_ALERTS=false
ENABLE_WEBHOOKS=true

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# Crawler/Scraper Configuration
# =============================================================================
PLAYWRIGHT_EXECUTABLE_PATH=
CRAWL_DEFAULT_FREQUENCY_MINUTES=60
CRAWL_MAX_CONCURRENT=5
CRAWL_TIMEOUT_MS=30000
CRAWLER_TIMEOUT_MS=30000
CRAWLER_MAX_RETRIES=3

# =============================================================================
# Monitoring & Error Tracking (Optional)
# =============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
# Development: SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_GA_MEASUREMENT_ID=
LOGTAIL_SOURCE_TOKEN=
